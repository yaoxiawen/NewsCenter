<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.yxw.newscenter.view.NoScrollViewPager
        android:id="@+id/vp_home"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <RadioGroup
        android:id="@+id/rg_home"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/bottom_tab_bg"
        android:orientation="horizontal">

        <RadioButton
            style="@style/RBHomeStyle"
            android:id="@+id/rb1_home"
            android:drawableTop="@drawable/rb1_home_selector"
            android:text="首页" />

        <RadioButton
            style="@style/RBHomeStyle"
            android:id="@+id/rb2_home"
            android:drawableTop="@drawable/rb2_home_selector"
            android:text="新闻中心" />

        <RadioButton
            style="@style/RBHomeStyle"
            android:id="@+id/rb3_home"
            android:drawableTop="@drawable/rb3_home_selector"
            android:text="智慧服务" />

        <RadioButton
            style="@style/RBHomeStyle"
            android:id="@+id/rb4_home"
            android:drawableTop="@drawable/rb4_home_selector"
            android:text="政务"/>

        <RadioButton
            style="@style/RBHomeStyle"
            android:id="@+id/rb5_home"
            android:drawableTop="@drawable/rb5_home_selector"
            android:text="设置"/>
    </RadioGroup>
</LinearLayout>